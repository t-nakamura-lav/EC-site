<div class="container">
  <div class="row">
    <h5 class="two-line-heading">商品詳細</h5>
  </div>

  <div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
      <div class="col-7">
        <%= attachment_image_tag @item, :image, hight:"100%", width:"100%" %>
      </div>
      <div class="col-5">
        <div class="card-body mt-4">

          <div class="row mb-3">
            <label class="col-sm-6">商品名</label>
            <div class="col-sm-6">
              <%= @item.name %>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-6">商品説明</label>
            <div class="col-sm-6">
              <%= @item.introduction %>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-6">ジャンル名</label>
            <div class="col-sm-6">
              <%= @item.genre.name %>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-6">税込価格(税抜価格)</label>
            <div class="col-sm-6">
              <%= @item.tax_include %>(<%= @item.price %>)
            </div>
          </div>

          <div class="row">
            <div class="col-sm-5 offset-sm-6">
              <%= link_to "編集する", edit_admins_item_path(@item), class:"btn-flat-success ml-4" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>