<div class="container">
  <div class="row">
    <div class="col-md-4 text-left">
      <p><strong style="background-color: #eeeeee; font-size: 25px;">商品一覧</strong>（全<%= @items.count %>件）</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card mb-3">
          <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 255, 210, format: 'jpeg' %>
          <% end %>
          <div class="card-body">
              <h5 class="card-title">
                <%= item.name %>
              </h5>
              <p class="card-text">
                <!--数値を通貨のフォーマットに変換-->
                <%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true, format: "%u%n") %>
              </p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<%= paginate @items %>